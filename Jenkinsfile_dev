pipeline{
    agent any
    stages{     
        stage('Clean Workspace'){
            steps{
                sh 'echo -e "## Limpando o Workspace ##"'
                deleteDir()
            }
        }

        stage('SCM GitHub - Checkout'){
            steps{
                dir('projeto'){ 
                    checkout scm
                    sh '''
                        case ${BRANCH_NAME} in
														master)     ENV="prd"       ;;
														develop)    ENV="dev"       ;;
														*)          ENV="default"   ;;
												esac
                        echo ${ENV} > environment.tmp  
                    '''
                    sh 'echo `cat environment.tmp` 02' 
                }
            }  
        }
        
